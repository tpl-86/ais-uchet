# Application Settings
APP_NAME=AIS-UCHET
APP_VERSION=2.0.0
DEBUG=False

# Database
DB_PATH=data/database/ais_uchet.db
DB_BACKUP_PATH=data/backups
DB_BACKUP_KEEP_DAYS=90

# Security
SECRET_KEY=your-secret-key-here
PASSWORD_SALT=your-salt-here
SESSION_TIMEOUT_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=data/logs/ais_uchet.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# UI Settings
THEME=light
LANGUAGE=ru_RU
WINDOW_WIDTH=1280
WINDOW_HEIGHT=720

# Performance
CACHE_ENABLED=True
CACHE_SIZE_MB=100
MAX_CONCURRENT_USERS=70
